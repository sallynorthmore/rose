{
  "name": "rose-pilkington-theme",
  "version": "0.0.1",
  "description": "A WordPress Theme for Rose Pilkington's Portfolio site",
  "main": "wordpress/index.php",
  "scripts": {
    "lint:js": "eslint 'src/**/*.js'",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint": "run-p lint:*",
    "clean": "rimraf wordpress/wp-content/themes/rosepilkington/web/{css/*,js/*,assets/*}",
    "prebuild": "npm run clean",
    "build:css": "postcss -c .postcssrc.json",
    "build:js": "babel src/ --out-dir wordpress/wp-content/themes/rosepilkington/web/js",
    "build": "run-p build:*",
    "watch:css": "postcss -c .postcssrc.json -w --poll",
    "watch:js": "babel src/ --watch --out-dir wordpress/wp-content/themes/rosepilkington/web/js --source-maps inline",
    "watch": "run-p watch:*",
    "wiredep": "wiredep -s src/app.css",
    "serve": "browser-sync start --config '.browsersyncrc.json'",
    "start": "run-p watch serve",
    "minify:css": "cssnano wordpress/wp-content/themes/rosepilkington/style.css wordpress/wp-content/themes/rosepilkington/style.css --safe --no-autoprexifer",
    "minify:js": "uglifyjs wordpress/wp-content/themes/rosepilkington/web/js/app.js --compress --mangle --output wordpress/wp-content/themes/rosepilkington/web/js/app.js",
    "minify": "npm-run-all --parallel minify:*"
  },
  "author": "Sally Northmore",
  "license": "ISC",
  "repository": {},
  "contributors": [
    {
      "name": "Sally Northmore",
      "email": "sally.northmore@gmail.com",
      "url": "https://github.com/sallynorthmore"
    }
  ],
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-cli": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.1.0",
    "chokidar-cli": "^1.2.0",
    "copy": "^0.3.0",
    "cssnano-cli": "^1.0.4",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "install": "^0.8.1",
    "npm": "^3.10.8",
    "npm-run-all": "^3.0.0",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.5.2",
    "postcss-color-function": "^2.0.1",
    "postcss-color-gray": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.2",
    "postcss-inline-svg": "^2.1.1",
    "postcss-nesting": "^2.3.1",
    "rimraf": "^2.5.4",
    "segmentio": "^0.1.4",
    "stylelint": "^7.4.2",
    "stylelint-config-standard": "^13.0.0",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "uglify-js": "^2.7.2",
    "watch": "^0.19.2",
    "watchify": "^3.7.0",
    "wiredep-cli": "^0.1.0"
  },
  "dependencies": {}
}
